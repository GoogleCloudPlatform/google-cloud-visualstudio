<!-- Common theming resources to be used in all dialogs and UI. -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Common size for all font text. -->
    <Style x:Key="CommonTextStyle">
        <Setter Property="TextElement.FontSize" Value="12px" />
    </Style>
    
    <!-- Label style. -->
    <Style x:Key="CommonLabelStyle" BasedOn="{StaticResource CommonTextStyle}" TargetType="{x:Type Label}">
        <Setter Property="TextElement.Foreground" Value="Black" />
    </Style>
  
</ResourceDictionary>