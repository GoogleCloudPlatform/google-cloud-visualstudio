<ResourceDictionary
        x:Class="GoogleCloudExtension.Theming.DefaultStyles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.14.0"
        mc:Ignorable="d">
    <Style x:Key="BasePanel" TargetType="Panel"/>
    
    <Style BasedOn="{StaticResource BasePanel}" TargetType="StackPanel"/>
    <Style BasedOn="{StaticResource BasePanel}" TargetType="Grid"/>
    <Style BasedOn="{StaticResource BasePanel}" TargetType="DockPanel"/>
    <Style x:Key="Control" TargetType="Control"/>
    
    <Style TargetType="RadioButton" BasedOn="{StaticResource Control}"/>
    <Style TargetType="TextBlock"/>
    <Style TargetType="Label" BasedOn="{StaticResource Control}"/>
    <Style TargetType="Button">
        <Style.Resources>
            <Style TargetType="TextBlock"/>
        </Style.Resources>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Padding" Value="2"/>
    </Style>
    <Style x:Key="ButtonsPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Style.Resources>
            <Style TargetType="Button">
                <Style.Resources>
                    <Style TargetType="TextBlock"/>
                </Style.Resources>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Margin" Value="5,5,8,5"/>
                <Setter Property="Height" Value="25"/>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>
