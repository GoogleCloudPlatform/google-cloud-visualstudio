<UserControl x:Class="GoogleCloudExtension.PublishDialog.Steps.Flex.NeedAppCreatedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.PublishDialog.Steps.Flex"
             xmlns:utils="clr-namespace:GoogleCloudExtension.Utils;assembly=GoogleCloudExtension.Utils"
             xmlns:ext="clr-namespace:GoogleCloudExtension"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:FlexStepViewModel}">
    <UserControl.Resources>
        <ResourceDictionary Source="../../../Theming/DefaultStylesResource.xaml" />
    </UserControl.Resources>

    <TextBlock TextWrapping="Wrap">
        <Run Text="{x:Static ext:Resources.PublishDialogFlexNeedToSetRegionMessage}" />
        <Hyperlink Command="{Binding SetAppRegionCommand}">
            <Run Text="{x:Static ext:Resources.PublishDialogFlexSetAppRegionCaption}" />
        </Hyperlink>
    </TextBlock>
</UserControl>
