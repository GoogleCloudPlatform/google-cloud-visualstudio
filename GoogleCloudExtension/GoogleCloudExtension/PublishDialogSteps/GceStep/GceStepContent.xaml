<UserControl x:Class="GoogleCloudExtension.PublishDialogSteps.GceStep.GceStepContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.PublishDialogSteps.GceStep"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{x:Type local:GceStepViewModel}">

    <StackPanel>
        <TextBlock>Select instance:</TextBlock>
        <ComboBox ItemsSource="{Binding Instances.Value}"
                  DisplayMemberPath="Name"
                  IsEnabled="{Binding Instances.IsCompleted}"
                  IsSynchronizedWithCurrentItem="True"
                  SelectedItem="{Binding SelectedInstance, Mode=TwoWay}" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.ColumnSpan="2" Margin="0,5,0,0">Select account:</TextBlock>
            <ComboBox ItemsSource="{Binding Credentials}"
                      IsEnabled="{Binding Instances.IsCompleted}"
                      IsSynchronizedWithCurrentItem="True"
                      DisplayMemberPath="User"
                      Grid.Row="1"
                      SelectedItem="{Binding SelectedCredentials, Mode=TwoWay}" Margin="0,0,5,0" />
            <Button Content="..." Grid.Row="1" Grid.Column="1" Command="{Binding ManageCredentialsCommand}" />
        </Grid>

    </StackPanel>
</UserControl>
