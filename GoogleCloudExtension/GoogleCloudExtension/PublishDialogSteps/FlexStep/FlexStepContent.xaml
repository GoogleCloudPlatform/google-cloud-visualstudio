<UserControl x:Class="GoogleCloudExtension.PublishDialogSteps.FlexStep.FlexStepContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.PublishDialogSteps.FlexStep"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{x:Type local:FlexStepViewModel}">
    <StackPanel>
        <TextBlock>Version name:</TextBlock>
        <TextBox Text="{Binding Version, Mode=TwoWay}" />

        <CheckBox IsChecked="{Binding Promote, Mode=TwoWay}" Margin="0,5,0,0">Promote version</CheckBox>
        <CheckBox IsChecked="{Binding OpenWebsite, Mode=TwoWay}" Margin="0,5,0,0">Open website after publish process finishes</CheckBox>
    </StackPanel>
</UserControl>
