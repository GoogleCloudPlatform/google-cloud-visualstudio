<UserControl x:Class="GoogleCloudExtension.FirewallManagement.PortManagerWindowContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.FirewallManagement"
             xmlns:controls="clr-namespace:GoogleCloudExtension.Controls"
             xmlns:utils="clr-namespace:GoogleCloudExtension.Utils;assembly=GoogleCloudExtension.Utils"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type local:PortManagerViewModel}}"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Margin="5" IsEnabled="{Binding NotSavingChanges}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">Set Firewall rules and tags to enable traffic for the instance:</TextBlock>

        <StackPanel Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Ports}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsEnabled}">
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} ({1})">
                                        <Binding Path="Name" />
                                        <Binding Path="Port" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </CheckBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Margin="0,5,0,0" Width="50" Padding="5" IsDefault="True" Command="{Binding OkCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Ok</TextBlock>
                    <controls:ProgressIndicator Visibility="{Binding SavingChanges, Converter={utils:VisibilityConverter}}" />
                </StackPanel>
            </Button>
            <Button Margin="5,5,0,0" Width="50" Padding="5" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</UserControl>
