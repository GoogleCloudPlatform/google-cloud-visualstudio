<UserControl x:Class="GoogleCloudExtension.MenuBarControls.GcpMenuBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.MenuBarControls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:GcpUserProjectViewModel}">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <Button Command="{Binding SelectProjectCommand}"
                MinWidth="50"
                MaxHeight="20"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="{Binding CurrentProjectAsync.Value.Name}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentProjectAsync.Value.Name}" Value="">
                            <Setter Property="Content" Value="No Project" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentProjectAsync.Value.Name}" Value="{x:Null}">
                            <Setter Property="Content" Value="No Project" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentProjectAsync.IsPending}" Value="True">
                            <Setter Property="Content" Value="Loading"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentProjectAsync.IsCanceled}" Value="True">
                            <Setter Property="Content" Value="Error"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentProjectAsync.IsError}" Value="True">
                            <Setter Property="Content" Value="Error"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Content="{Binding ProfilePictureAsync.Value}"
                Command="{Binding ManageAccountsCommand}"
                ToolTip="{Binding ProfileNameAsync.Value}"
                Width="20"
                Height="20"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="5,0,0,0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter />
                </ControlTemplate>
            </Button.Template>
            <Button.ContentTemplate>
                <DataTemplate DataType="BitmapImage">
                    <Image Source="{Binding}" VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>
    </StackPanel>
</UserControl>
