<UserControl x:Class="GoogleCloudExtension.MenuBarControls.GcpMenuBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.MenuBarControls"
             xmlns:controls="clr-namespace:GoogleCloudExtension.Controls"
             xmlns:wpf="clr-namespace:GoogleCloudExtension.Utils.Wpf;assembly=GoogleCloudExtension.Utils"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:IGcpUserProjectViewModel}">
    <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding ProjectDisplayString, Mode=OneWay}"
                 IsReadOnly="True"/>

        <controls:PressButton Content="{Binding ProfilePictureAsync.Value}"
                              Command="{Binding ManageAccountsCommand}"
                              ToolTip="{Binding ProfileNameAsync.Value}">
            <controls:PressButton.ContentTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" Width="25px" Height="25px" VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
                </DataTemplate>
            </controls:PressButton.ContentTemplate>
        </controls:PressButton>
    </StackPanel>
</UserControl>
