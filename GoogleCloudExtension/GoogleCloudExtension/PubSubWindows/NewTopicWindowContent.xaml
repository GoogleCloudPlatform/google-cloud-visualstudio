<UserControl
        x:Class="GoogleCloudExtension.PubSubWindows.NewTopicWindowContent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:GoogleCloudExtension.PubSubWindows"
        xmlns:theming="clr-namespace:GoogleCloudExtension.Theming"
        xmlns:ext="clr-namespace:GoogleCloudExtension"
        mc:Ignorable="d"
        Margin="5"
        Padding="5"
        FocusManager.FocusedElement="{Binding ElementName=TopicName}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <theming:DefaultStyles/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center"
                   Text="{Binding Project, StringFormat={x:Static ext:Resources.NewTopicWindowTitle}}"/>
        <DockPanel>
            <Label Target="{Binding ElementName=TopicName}" DockPanel.Dock="Left"
                   Content="{x:Static ext:Resources.NewTopicWindowNameLabel}"/>
            <TextBox x:Name="TopicName" MinWidth="200" MaxLines="1"
                     ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}">
                <TextBox.Text>
                    <Binding Path="TopicName" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <local:PubSubNameValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </DockPanel>
        <StackPanel Style="{StaticResource ButtonsPanel}">
            <Button Command="{Binding CreateCommand}" IsDefault="True"
                    Content="{x:Static ext:Resources.FocusableCreateButton}"/>
            <Button IsCancel="True" Content="{x:Static ext:Resources.FocusableCancelButton}"/>
        </StackPanel>
    </StackPanel>
</UserControl>

